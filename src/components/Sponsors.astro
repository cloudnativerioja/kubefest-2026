---
import Reveal from './Reveal.astro';
import googleLogo from '../images/sponsors/google.svg';
import irSolucionesLogo from '../images/sponsors/ir-soluciones.svg';
---

<div class="flex flex-1 justify-center py-16 px-4 md:px-0 bg-gradient-to-b from-gray-50 to-white dark:from-[#0B1120] dark:to-[#0f172a] transition-colors duration-300" id="sponsors">
  <div class="flex flex-col max-w-[960px] flex-1 w-full items-center">
    <Reveal className="w-full text-center">
      <h2 class="text-slate-900 dark:text-white text-4xl font-bold leading-tight tracking-[-0.015em] mb-4">
        Sponsors
      </h2>
      <p class="text-gray-500 dark:text-gray-400 mb-12 text-center text-lg">Apoyando la innovación en Logroño y el ecosistema Cloud Native</p>
    </Reveal>

    <Reveal mode="children" className="w-full flex flex-col items-center gap-8 md:gap-12 px-4">
      <!-- Main Sponsors -->
      <div class="flex flex-wrap justify-center items-center gap-8 md:gap-12 w-full">
        <a
          href="https://cloud.google.com/"
          target="_blank"
          rel="noreferrer"
          class="h-28 w-56 p-6 bg-white dark:bg-card-dark rounded-2xl flex items-center justify-center border border-gray-200 dark:border-white/5 hover:border-cncf-blue/50 dark:hover:border-cncf-blue hover:shadow-xl dark:hover:shadow-[0_0_20px_rgba(0,134,255,0.15)] transition-all duration-300 group cursor-pointer hover:-translate-y-1 relative overflow-hidden"
        >
          <div class="absolute inset-0 bg-gradient-to-tr from-cncf-blue/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <img src={googleLogo.src} alt="Google" class="logo-muted h-10 w-auto relative z-10 transition-all duration-300" loading="lazy" />
        </a>
        <a
          href="https://www.irsoluciones.com/"
          target="_blank"
          rel="noreferrer"
          class="h-28 w-56 p-6 bg-white dark:bg-card-dark rounded-2xl flex items-center justify-center border border-gray-200 dark:border-white/5 hover:border-secondary/50 dark:hover:border-secondary hover:shadow-xl dark:hover:shadow-[0_0_20px_rgba(214,34,147,0.15)] transition-all duration-300 group cursor-pointer hover:-translate-y-1 relative overflow-hidden"
        >
          <div class="absolute inset-0 bg-gradient-to-tr from-secondary/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <img src={irSolucionesLogo.src} alt="IR Soluciones" class="logo-muted w-auto relative z-10 transition-all duration-300" loading="lazy" />
        </a>
      </div>
    </Reveal>

    <Reveal className="mt-20 bg-gradient-to-br from-white to-gray-50 dark:from-card-dark dark:to-[#0f172a] rounded-2xl p-1 w-full max-w-3xl mx-auto shadow-2xl relative overflow-hidden group hover:scale-[1.01] transition-transform duration-500">
      <div class="absolute inset-0 bg-gradient-to-r from-cncf-blue via-secondary to-cncf-blue opacity-20 dark:opacity-30 blur-xl group-hover:opacity-40 transition-opacity duration-500"></div>
      <div class="relative bg-white dark:bg-[#111827] rounded-xl p-8 md:p-10 flex flex-col items-center text-center overflow-hidden">
        <div class="absolute -right-10 -top-10 text-gray-100 dark:text-white/5 rotate-12 pointer-events-none">
          <span class="material-symbols-outlined text-[12rem]">handshake</span>
        </div>
        <h3 class="text-slate-900 dark:text-white text-2xl font-bold mb-3 z-10">
          ¿Quieres apoyar a la comunidad?
        </h3>
        <p class="text-gray-600 dark:text-gray-300 mb-8 max-w-lg mx-auto z-10 leading-relaxed">
          Conecta con los mejores talentos de IA e Infraestructura en el evento del año.
        </p>
        <a href="mailto:info@kubefest.com?subject=Patrocinio%20Kubefest%202026" class="relative z-10 inline-block bg-transparent border-2 border-cncf-blue text-cncf-blue dark:text-white dark:border-cncf-blue hover:bg-cncf-blue hover:text-white font-bold py-3 px-8 rounded-lg transition-all duration-300 shadow-[0_0_15px_rgba(0,134,255,0.2)] hover:shadow-[0_0_25px_rgba(0,134,255,0.4)]">
          Quiero patrocinar
        </a>
      </div>
    </Reveal>
  </div>
</div>

<style>
  .logo-muted {
    opacity: 0.72;
    transition: opacity 0.3s ease, filter 0.3s ease;
  }

  :global(.dark) .logo-muted {
    filter: invert(1) brightness(1.05);
    opacity: 0.7;
  }

  .group:hover .logo-muted {
    opacity: 1;
  }
</style>

