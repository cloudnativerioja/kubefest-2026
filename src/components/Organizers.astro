---
import Reveal from './Reveal.astro';
import { ORGANIZERS } from '../constants';
---

<div class="flex flex-1 justify-center py-16 px-4 md:px-0 bg-white dark:bg-[#0B1120] border-t border-gray-200 dark:border-white/5 transition-colors duration-300" id="organizadores">
  <div class="flex flex-col max-w-[960px] flex-1 w-full">
    <Reveal className="px-4 pb-12 text-center">
      <h2 class="text-slate-900 dark:text-white text-4xl font-bold leading-tight tracking-[-0.015em] mb-4">
        Organizadores
      </h2>
      <p class="text-gray-500 dark:text-gray-400 mt-3 max-w-2xl mx-auto text-lg">
        Impulsando la tecnolog√≠a en la comunidad Cloud Native de La Rioja.
      </p>
    </Reveal>

    <Reveal mode="children" className="grid grid-cols-1 md:grid-cols-3 gap-8 px-4 justify-items-center">
      {ORGANIZERS.map((org, idx) => (
        <a href={org.link} target="_blank" rel="noopener noreferrer" class="flex flex-col items-center text-center group w-full cursor-pointer">
          <div class="relative mb-4">
            <div class="absolute inset-0 bg-gradient-to-r from-cncf-blue to-secondary rounded-full blur opacity-0 group-hover:opacity-70 transition-opacity duration-300"></div>
            <div class="relative w-32 h-32 rounded-full overflow-hidden border-2 border-gray-200 dark:border-[#232f48] group-hover:border-transparent transition-all duration-300 p-1 bg-white dark:bg-[#1a2332]">
              <img
                src={org.image}
                alt={org.name}
                class="w-full h-full object-cover rounded-full grayscale group-hover:grayscale-0 transition-all duration-300"
              />
            </div>
          </div>
          <h3 class="text-slate-900 dark:text-white font-bold text-lg mb-1 group-hover:text-cncf-blue transition-colors">
            {org.name}
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-300 font-medium">{org.role}</p>
        </a>
      ))}
    </Reveal>
  </div>
</div>

