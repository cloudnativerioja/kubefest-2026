---
import { TICKETS_URL } from '../constants';
import kubefestLogo from '../images/misc/kubefest-logo.svg';

const menuLinks = [
  { href: '#speakers', label: 'Speakers' },
  { href: '#agenda', label: 'Agenda' },
  { href: '#sponsors', label: 'Sponsors' },
  { href: '#ubicacion', label: 'Ubicación' },
];
---

<div id="navbar" class="sticky top-0 z-50 w-full bg-white/30 dark:bg-[#0B1120]/30 backdrop-blur-xl border-b border-white/20 dark:border-white/10 transition-all duration-300">
  <div class="flex justify-center px-4 py-3 md:px-10">
    <div class="flex w-full max-w-[1200px] items-center justify-between">
      <div class="flex items-center gap-2 md:w-1/4">
        <div class="size-10 text-cncf-blue flex items-center justify-center">
          <img src={kubefestLogo.src} alt="KubeFest Logo" class="w-full h-full kubefest-logo" role="img" aria-label="Icon" />
        </div>
        <a href="/">
          <h1 class="text-slate-900 dark:text-white text-base sm:text-lg md:text-xl font-bold leading-tight tracking-[-0.015em] bg-clip-text whitespace-nowrap">
            KubeFest 2026
          </h1>
        </a>
      </div>
      <div class="hidden md:flex flex-1 justify-center items-center gap-8">
        <nav class="flex items-center gap-6 px-4 py-2 bg-gray-100/50 dark:bg-white/5 rounded-full border border-gray-200 dark:border-white/10 backdrop-blur-sm">
          {menuLinks.map((link) => (
            <a href={link.href} class="text-gray-600 dark:text-gray-300 hover:text-cncf-blue dark:hover:text-cncf-blue text-sm font-medium transition-colors hover:bg-white dark:hover:bg-white/10 px-3 py-1 rounded-full">
              {link.label}
            </a>
          ))}
        </nav>
      </div>
      <div class="flex md:w-1/4 justify-end items-center gap-3">
        <button
          id="dark-mode-toggle"
          aria-label="Toggle Dark Mode"
          class="flex items-center justify-center p-2 rounded-full text-gray-500 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-white/10 transition-colors border border-transparent hover:border-gray-200 dark:hover:border-white/10"
        >
          <span class="material-symbols-outlined dark:hidden">dark_mode</span>
          <span class="material-symbols-outlined hidden dark:block">light_mode</span>
        </button>
        <a href={TICKETS_URL} target="_blank" rel="noopener noreferrer" class="hidden md:flex cursor-pointer items-center justify-center overflow-hidden rounded-full h-10 px-6 bg-cncf-blue hover:bg-cncf-dark transition-all duration-300 hover:scale-105 text-white text-sm font-bold shadow-lg shadow-cncf-blue/20">
          <span class="truncate">Tickets</span>
        </a>
        <button
          id="menu-toggle"
          class="md:hidden text-slate-900 dark:text-white ml-2 inline-flex items-center justify-center rounded-full p-2 hover:bg-gray-100 dark:hover:bg-white/10 transition-colors"
          aria-label="Abrir menú"
        >
          <span class="material-symbols-outlined text-3xl">menu</span>
        </button>
      </div>
    </div>
  </div>
</div>

<div
  id="mobile-menu"
  class="fixed inset-0 z-[60] hidden bg-white/60 dark:bg-[#0B1120]/60 backdrop-blur-2xl"
  aria-hidden="true"
>
  <div class="flex h-full flex-col p-6">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3">
        <div class="size-10 text-cncf-blue flex items-center justify-center">
          <img src={kubefestLogo.src} alt="KubeFest Logo" class="w-full h-full kubefest-logo" role="img" aria-label="Icon" />
        </div>
        <a href="/" class="text-slate-900 dark:text-white text-xl font-bold tracking-[-0.015em] whitespace-nowrap">KubeFest 2026</a>
      </div>
      <div class="flex items-center gap-3">
        <button
          id="mobile-dark-toggle"
          aria-label="Toggle Dark Mode"
          class="flex items-center justify-center p-2 rounded-full text-gray-500 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-white/10 transition-colors border border-transparent hover:border-gray-200 dark:hover:border-white/10"
        >
          <span class="material-symbols-outlined dark:hidden">dark_mode</span>
          <span class="material-symbols-outlined hidden dark:block">light_mode</span>
        </button>
        <button
          id="menu-close"
          class="inline-flex items-center justify-center rounded-full p-2 text-slate-900 dark:text-white hover:bg-gray-100 dark:hover:bg-white/10 transition-colors"
          aria-label="Cerrar menú"
        >
          <span class="material-symbols-outlined text-3xl">close</span>
        </button>
      </div>
    </div>
    <div class="mt-10 flex-1">
      <nav class="flex flex-col gap-4 text-lg font-semibold text-slate-900 dark:text-white">
        {menuLinks.map((link) => (
          <a class="px-4 py-3 rounded-2xl hover:bg-white/60 dark:hover:bg-white/10 transition-colors" href={link.href}>
            {link.label}
          </a>
        ))}
      </nav>
    </div>
    <div class="flex flex-col gap-4">
      <a href={TICKETS_URL} target="_blank" rel="noopener noreferrer" class="inline-flex cursor-pointer items-center justify-center rounded-full h-12 px-6 bg-cncf-blue hover:bg-cncf-dark transition-all duration-300 hover:scale-[1.02] text-white text-base font-bold shadow-lg shadow-cncf-blue/20">
        Tickets
      </a>
    </div>
  </div>
</div>

<script>
  // Initialize dark mode from localStorage or default to dark
  function initDarkMode() {
    const stored = localStorage.getItem('darkMode');
    // Default to dark mode if no preference is stored
    const isDark = stored !== null ? stored === 'true' : true;
    
    if (isDark) {
      document.documentElement.classList.add('dark');
    } else {
      document.documentElement.classList.remove('dark');
    }
  }

  // Toggle dark mode
  function toggleDarkMode() {
    const isDark = document.documentElement.classList.toggle('dark');
    localStorage.setItem('darkMode', isDark.toString());
    // Force navbar style update after dark mode toggle
    const navbar = document.getElementById('navbar');
    if (navbar) {
      handleScroll();
    }
  }

  // Initialize on load
  initDarkMode();

  // Set up toggle button
  const toggleButton = document.getElementById('dark-mode-toggle');
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuClose = document.getElementById('menu-close');
  const mobileDarkToggle = document.getElementById('mobile-dark-toggle');

  function openMenu() {
    if (!mobileMenu) return;
    mobileMenu.classList.remove('hidden');
    mobileMenu.setAttribute('aria-hidden', 'false');
    document.body.style.overflow = 'hidden';
  }

  function closeMenu() {
    if (!mobileMenu) return;
    mobileMenu.classList.add('hidden');
    mobileMenu.setAttribute('aria-hidden', 'true');
    document.body.style.overflow = '';
  }

  if (toggleButton) {
    toggleButton.addEventListener('click', toggleDarkMode);
  }

  if (mobileDarkToggle) {
    mobileDarkToggle.addEventListener('click', toggleDarkMode);
  }

  if (menuToggle) {
    menuToggle.addEventListener('click', openMenu);
  }

  if (menuClose) {
    menuClose.addEventListener('click', closeMenu);
  }

  if (mobileMenu) {
    mobileMenu.addEventListener('click', (e) => {
      if (e.target === mobileMenu) {
        closeMenu();
      }
    });

    window.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        closeMenu();
      }
    });

    const mobileLinks = mobileMenu.querySelectorAll('a[href^="#"], a[href^="http"]');
    mobileLinks.forEach((link) => {
      link.addEventListener('click', () => {
        closeMenu();
      });
    });
  }

  // Listen for system preference changes (only if user hasn't set a preference)
  // Note: Default is now dark, so we only respond to system changes if user hasn't explicitly set a preference
  window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
    // Only auto-update if user hasn't explicitly set a preference
    // Since default is dark, we keep it dark unless user toggles
    if (localStorage.getItem('darkMode') === null) {
      // Keep dark mode as default regardless of system preference
      document.documentElement.classList.add('dark');
    }
  });

  // Add scroll effect to navbar
  const navbar = document.getElementById('navbar');
  function handleScroll() {
    if (!navbar) return;
    const isDark = document.documentElement.classList.contains('dark');
    if (window.scrollY > 10) {
      navbar.classList.add('scrolled');
      // Slightly more opaque when scrolled, but still glassmorphic
      if (isDark) {
        navbar.style.backgroundColor = 'rgba(11, 17, 32, 0.5)';
      } else {
        navbar.style.backgroundColor = 'rgba(255, 255, 255, 0.5)';
      }
    } else {
      navbar.classList.remove('scrolled');
      // Reset to base glassmorphic background
      if (isDark) {
        navbar.style.backgroundColor = 'rgba(11, 17, 32, 0.3)';
      } else {
        navbar.style.backgroundColor = 'rgba(255, 255, 255, 0.3)';
      }
    }
  }
  
  if (navbar) {
    window.addEventListener('scroll', handleScroll);
    handleScroll(); // Check initial state
  }
</script>

<style>
  #navbar {
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
  }
  
  html:not(.dark) #navbar {
    background-color: rgba(255, 255, 255, 0.3) !important;
    border-bottom-color: rgba(0, 0, 0, 0.1);
  }
  
  html:not(.dark) #navbar.scrolled {
    background-color: rgba(255, 255, 255, 0.5) !important;
    box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1);
    border-bottom-color: rgba(0, 0, 0, 0.15);
  }
  
  html.dark #navbar {
    background-color: rgba(11, 17, 32, 0.3) !important;
    border-bottom-color: rgba(255, 255, 255, 0.1);
  }
  
  html.dark #navbar.scrolled {
    background-color: rgba(11, 17, 32, 0.5) !important;
    box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.4);
    border-bottom-color: rgba(255, 255, 255, 0.15);
  }
</style>
