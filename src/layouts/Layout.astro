---
interface Props {
  title?: string;
}

const { title = "KubeFest 2026 - Infraestructura, Kubernetes e IA en Logro√±o" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@300..900&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    <script
      type="text/partytown"
      is:inline
      src="https://www.googletagmanager.com/gtag/js?id=G-PNDDQK785Q"
    ></script>
    <script is:inline type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());
      gtag('config', 'G-PNDDQK785Q', {
        'edition_year': '2026'
      });
    </script>
  </head>
  <body class="bg-background-light dark:bg-background-dark">
    <slot />
    
    <style is:global>
      html { 
        scroll-behavior: smooth; 
      }
      
      /* Base reveal styles handled by client-side script */
      .reveal {
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.8s ease-out;
      }
      .reveal.active {
        opacity: 1;
        transform: translateY(0);
      }
      
      .reveal-children > * {
        opacity: 0;
        transform: translateY(20px);
        transition: all 0.6s ease-out;
      }
      .reveal-children.active > * {
        opacity: 1;
        transform: translateY(0);
      }
      /* Staggered delays */
      .reveal-children.active > *:nth-child(1) { transition-delay: 0.1s; }
      .reveal-children.active > *:nth-child(2) { transition-delay: 0.2s; }
      .reveal-children.active > *:nth-child(3) { transition-delay: 0.3s; }
      .reveal-children.active > *:nth-child(4) { transition-delay: 0.4s; }
      .reveal-children.active > *:nth-child(5) { transition-delay: 0.5s; }
      .reveal-children.active > *:nth-child(6) { transition-delay: 0.6s; }
      .reveal-children.active > *:nth-child(7) { transition-delay: 0.7s; }

      .map-filter {
        filter: grayscale(100%) invert(92%) contrast(83%);
      }
      .dark .map-filter {
        filter: grayscale(100%) invert(10%) contrast(83%);
      }
    </style>
  </body>
</html>


