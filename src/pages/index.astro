---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import Editions from '../components/Editions.astro';
import Speakers from '../components/Speakers.astro';
import Award from '../components/Award.astro';
import Agenda from '../components/Agenda.astro';
import Sponsors from '../components/Sponsors.astro';
import Organizers from '../components/Organizers.astro';
import Location from '../components/Location.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
  <Navbar />
  <div class="relative flex min-h-screen w-full flex-col group/design-root font-display bg-background-light dark:bg-background-dark text-slate-900 dark:text-white antialiased overflow-x-hidden transition-colors duration-300">
    <div class="layout-container flex h-full grow flex-col">
      
      <Editions />
      <Speakers />
      <Award />
      <Agenda />
      <Sponsors />
      <Organizers />
      <Location />
      <Footer />
    </div>
  </div>
</Layout>

<script>
  // Handle all hash links on the page with smooth scrolling
  document.addEventListener('DOMContentLoaded', () => {
    const navbar = document.getElementById('navbar');
    const navbarHeight = navbar?.offsetHeight || 0;

    // Handle clicks on any hash link
    document.addEventListener('click', (e) => {
      const target = e.target as HTMLElement;
      if (!target) return;
      
      const link = target.closest('a[href^="#"]') as HTMLAnchorElement | null;
      if (link) {
        e.preventDefault();
        const targetId = link.getAttribute('href')?.substring(1);
        if (targetId) {
          const targetElement = document.getElementById(targetId);
          if (targetElement) {
            const currentNavbarHeight = navbar?.offsetHeight || navbarHeight;
            const targetPosition = targetElement.getBoundingClientRect().top + window.pageYOffset - currentNavbarHeight;
            window.scrollTo({
              top: targetPosition,
              behavior: 'smooth'
            });
          }
        }
      }
    });
  });
</script>

